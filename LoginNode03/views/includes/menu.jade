.menu
  ul.nav.nav-pills
    li(class=(menu === 'index')?'active':'')
      a(href='/') Home
    if (isAuthenticated)
      if(admin)  
        li(class=(menu === 'post')?'active':'')
          a(href="/post") Post
        li(class=(menu === 'admin')?'active':'')
          a(href="/admin") Admin
      else
        li(class=(menu === 'room')?'active':'')
          a(href="/room") Room
      li
        a(href="/logout") Log out
    else
      li(class=(menu === 'login')?'active':'')
        a(href='/login') Log in
      li(class=(menu === 'register')?'active':'')
        a(href='/register') Register
      li
        a(href='/auth/facebook') Sign in with Facebook