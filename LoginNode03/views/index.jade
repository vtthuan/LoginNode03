extends layout

block page 
  - var menu = 'index'
block content

  if (user)
    p You are currently logged in as #{user.email}
    a(href="/logout") Logout
    br
  if (articles.length === 0)
    | There's no published content yet. 
    a(href="/login") Log in
    |  to post and publish.
  else 
    each article, index in articles
      div
        h2
          a(href="/articles/#{article.slug}")= article.title